<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_appbar"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/_24dp"
                android:layout_marginTop="@dimen/_30dp"
                android:layout_marginEnd="24dp"
                app:boxCornerRadiusBottomEnd="@dimen/_8dp"
                app:boxCornerRadiusBottomStart="@dimen/_8dp"
                app:boxCornerRadiusTopEnd="@dimen/_8dp"
                app:boxCornerRadiusTopStart="@dimen/_8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bgsearch"
                    android:drawableStart="@drawable/ic_search_24"
                    android:drawablePadding="@dimen/_8dp"
                    android:hint="@string/search_hint" />
            </com.google.android.material.textfield.TextInputLayout>

        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="370dp"
        android:layout_height="@dimen/_100dp"
        android:layout_below="@id/rl1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bgpasar"
        android:padding="@dimen/_7dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100dp"
            app:cardCornerRadius="@dimen/_5dp">

        <TextView
            android:id="@+id/tv_belanjadi"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/_7dp"
            android:layout_height="wrap_content"
            android:text="Kamu Belanja Di :"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90dp"
            android:layout_below="@id/tv_belanjadi"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_market"
                android:layout_width="35dp"
                android:layout_height="@dimen/_40dp"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginTop="@dimen/_30dp"
                android:src="@drawable/market" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_27dp"
                android:text="Pasar Bulu Semarang"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/_30dp"
                android:background="@color/pastel"
                android:text="@string/ganti" />

        </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl2"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12dp"
            android:text="Telusuri Jenis Produk"
            android:layout_marginBottom="@dimen/_10dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5dp"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardElevation="@dimen/_10dp">

                <ImageView
                    android:id="@+id/img_sayuran"
                    android:layout_width="45dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:src="@drawable/sayuran"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_55dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardElevation="@dimen/_10dp">

                <ImageView
                    android:id="@+id/img_buah"
                    android:layout_width="@dimen/_45dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:src="@drawable/buah"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_55dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardElevation="@dimen/_10dp">

                <ImageView
                    android:id="@+id/img_laukpauk"
                    android:layout_width="@dimen/_45dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:src="@drawable/lauk_pauk"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_55dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardElevation="@dimen/_10dp">

                <ImageView
                    android:id="@+id/img_seafood"
                    android:layout_width="@dimen/_45dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:src="@drawable/seafood"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_55dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardElevation="@dimen/_10dp">

                <ImageView
                    android:id="@+id/img_bumbu"
                    android:layout_width="@dimen/_45dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:src="@drawable/bumbu"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8dp"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sayuran"
                android:textSize="@dimen/_13sp"
                android:id="@+id/tv_sayuran"
                android:layout_marginStart="@dimen/_6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buah"
                android:textSize="@dimen/_13sp"
                android:id="@+id/tv_buah"
                android:layout_marginStart="@dimen/_40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/laukpauk"
                android:textSize="@dimen/_13sp"
                android:id="@+id/tv_laukpauk"
                android:layout_marginStart="@dimen/_30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seafood"
                android:textSize="@dimen/_13sp"
                android:id="@+id/tv_seafood"
                android:layout_marginStart="@dimen/_20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bumbu"
                android:textSize="@dimen/_13sp"
                android:id="@+id/tv_bumbu"
                android:layout_marginStart="@dimen/_30dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_55dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5dp"
                android:layout_marginTop="@dimen/_10dp"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardElevation="@dimen/_10dp">

                <ImageView
                    android:id="@+id/img_sembako"
                    android:layout_width="@dimen/_45dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:src="@drawable/sembako"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_55dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardElevation="@dimen/_10dp">

                <ImageView
                    android:id="@+id/img_jajanan"
                    android:layout_width="@dimen/_45dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:src="@drawable/jajanan"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_55dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardElevation="@dimen/_10dp">

                <ImageView
                    android:id="@+id/img_kesehatan"
                    android:layout_width="@dimen/_45dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:src="@drawable/healthy_64"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_55dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardElevation="@dimen/_10dp">

                <ImageView
                    android:id="@+id/img_siapmasak"
                    android:layout_width="@dimen/_45dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:src="@drawable/siapmasak"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8dp"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sembako"
                android:id="@+id/tv_sembako"
                android:textSize="@dimen/_13sp"
                android:layout_marginStart="@dimen/_5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jajanan"
                android:textSize="@dimen/_13sp"
                android:id="@+id/tv_jajanan"
                android:layout_marginStart="@dimen/_25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kesehatan"
                android:textSize="@dimen/_13sp"
                android:id="@+id/tv_kesehatan"
                android:layout_marginStart="@dimen/_22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/siapmasak"
                android:textSize="@dimen/_13sp"
                android:id="@+id/tv_siapmasak"
                android:layout_marginStart="@dimen/_18dp"/>
        </LinearLayout>
    </LinearLayout>


    <com.synnapps.carouselview.CarouselView
        android:id="@+id/is_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200dp"
        android:layout_below="@id/ll1"
        android:layout_margin="@dimen/_5dp"
        android:layout_marginTop="@dimen/_15dp"
        app:fillColor="@android:color/white"
        app:pageColor="@android:color/transparent"
        app:radius="@dimen/_5dp"
        app:slideInterval="3000"
        app:strokeColor="@color/strokeColor"
        app:strokeWidth="@dimen/_1dp" />

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/is_main"
        android:padding="@dimen/_5dp">

        <TextView
            android:id="@+id/tv_produk_terlaris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/produk_terlaris"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14sp"
            android:layout_marginStart="@dimen/_20dp"/>

        <TextView
            android:id="@+id/see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seeall"
            android:textColor="@color/pastel"
            android:textStyle="bold"
            android:textSize="@dimen/_14sp"
            android:layout_marginStart="200dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll2"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_margin="@dimen/_5dp"/>

    </RelativeLayout>

</ScrollView>